
@{
    ViewBag.Title = "Cadastro de Colaborador";
    Layout = "~/Views/Shared/_Principal.cshtml";
}
@using (Html.BeginForm("Cadastro","Colaborador", FormMethod.Post, new { @id = "form_validation" }))
{
<div class="row clearfix">
    <div class="col-md-12">

        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <strong>Erro!</strong> Mensagem de Erro.
        </div>

        <div class="card">
            <div class="header">
                <h2>@ViewBag.Title</h2>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-md-3 col-sm-3 form-group form-float">                        
                        <input type="text" class="form-control" value="1" readonly />
                        <label>Id</label>
                    </div>
                    <div class="col-md-9 col-sm-9">                        
                        <input type="text" class="form-control" value="Carlos Vamberto de Araujo Martins Filho" name="Nome" required/>
                        <label>Nome</label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <label>Senha</label>
                        <input type="password" class="form-control" value="senha" />
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <label>Confirma a Senha</label>
                        <input type="password" class="form-control" value="senha" />
                    </div>
                    <div class="col-md-12 col-sm-12 text-right">
                        <button type="button" class="btn btn-default" id="btnSalvar">Salvar</button>
                        <button type="button" class="btn btn-primary">Cancelar</button>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>

}

<script src="~/Scripts/views/ColaboradorCadastro.js"></script>