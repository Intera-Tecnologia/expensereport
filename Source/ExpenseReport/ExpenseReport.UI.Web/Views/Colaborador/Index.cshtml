
@{
    ViewBag.Title = "Colaborador Listagem";
    Layout = "~/Views/Shared/_Principal.cshtml";
}

<div class="row clearfix">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h2>@ViewBag.Title</h2>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="form-line">
                                <input class="form-control" type="text" placeholder="Nome do Colaborador" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-primary" type="button" title="Localizar">
                            <span class="glyphicon glyphicon-search"></span> Localizar
                        </button>
                        <a href="/Colaborador/Cadastro" class="btn btn-primary" type="button" title="Adicionar">
                            <span class="glyphicon glyphicon-plus-sign"></span> Adicionar
                        </a>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th width="70px">#</th>
                                        <th>Nome do Colaborador</th>
                                        <th width="100px"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>Carlos Vamberto de Araujo Martins Filho</td>
                                        <td>
                                            <button class="btn btn-sm btn-link" title="Editar">
                                                <span class="glyphicon glyphicon-edit"></span>
                                            </button>
                                            <button class="btn btn-sm btn-link" title="Excluir">
                                                <span class="glyphicon glyphicon-trash"></span>
                                            </button>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>2</td>
                                        <td>Rodrigo Bezerra</td>
                                        <td>
                                            <button class="btn btn-sm btn-link" title="Editar">
                                                <span class="glyphicon glyphicon-edit"></span>
                                            </button>
                                            <button class="btn btn-sm btn-link" title="Excluir">
                                                <span class="glyphicon glyphicon-trash"></span>
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


